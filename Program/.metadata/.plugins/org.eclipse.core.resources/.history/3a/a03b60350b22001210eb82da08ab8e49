package pl.wroc.pwr.student.acteditor.view;

import org.eclipse.swt.SWT;
import org.eclipse.swt.events.SelectionAdapter;
import org.eclipse.swt.events.SelectionEvent;
import org.eclipse.swt.layout.FormAttachment;
import org.eclipse.swt.layout.FormData;
import org.eclipse.swt.widgets.Button;
import org.eclipse.swt.widgets.Combo;
import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Group;
import org.eclipse.swt.widgets.Shell;

import pl.wroc.pwr.student.acteditor.view.WindowFactory.WindowType;

public class Main extends Window {

	public Main(Display display) {
		super();
		this.display = display;
		this.shell = new Shell(display);
	}

	@Override
	public void initialize() {
		
	}

	@Override
	public void setupComponents() {
		shell.setText("Hello world!");	Group grpUtwrz = new Group(shell, SWT.NONE);
		FormData fd = new FormData();
		fd.right = new FormAttachment(100, -10);
		fd.bottom = new FormAttachment(100, -10);
		fd.left = new FormAttachment(100, -463);
		fd.top = new FormAttachment(0, 10);
		grpUtwrz.setLayoutData(fd);
		grpUtwrz.setText("Utw\u00F3rz nowy akt prawny");
		
		final Combo combo = new Combo(grpUtwrz, SWT.NONE);
		combo.setBounds(46, 98, 316, 23);
		combo.add("Decyzja");
		
		Button btnUtwrz = new Button(grpUtwrz, SWT.NONE);
		btnUtwrz.addSelectionListener(new SelectionAdapter() {
			@Override
			public void widgetSelected(SelectionEvent e) {
				if(combo.getSelectionIndex() == 0) {
					Window window = WindowFactory.getWindow(WindowType.DECISION);
					window.setupComponents();
					window.open();
					window.dispose();
				}
			}
		});
		btnUtwrz.setBounds(287, 127, 75, 25);
		btnUtwrz.setText("Utw\u00F3rz");
	}
	
}
