package pl.wroc.pwr.student.acteditor.test;

import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Group;
import org.eclipse.swt.SWT;
import org.eclipse.swt.layout.FillLayout;
import org.eclipse.swt.layout.FormLayout;
import org.eclipse.swt.layout.FormData;
import org.eclipse.swt.layout.FormAttachment;

public class Tester {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		final Display display = new Display();
		Shell shell = new Shell(display);
		shell.setSize(715, 555);
		shell.setText("Hello world!");
		shell.setLayout(new FormLayout());
		
		Group grpUtwrz = new Group(shell, SWT.NONE);
		FormData fd_grpUtwrz = new FormData();
		fd_grpUtwrz.right = new FormAttachment(100, -10);
		fd_grpUtwrz.bottom = new FormAttachment(100, -10);
		fd_grpUtwrz.left = new FormAttachment(100, -346);
		fd_grpUtwrz.top = new FormAttachment(0, 10);
		grpUtwrz.setLayoutData(fd_grpUtwrz);
		grpUtwrz.setText("Utw\u00F3rz");
		shell.open();
		while (!shell.isDisposed()) {
			if (!display.readAndDispatch())
				display.sleep();
		}
		display.dispose();
	}
}
