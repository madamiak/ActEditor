package pl.wroc.pwr.student.acteditor.view;

import org.eclipse.swt.widgets.Display;
import org.eclipse.swt.widgets.Shell;
import org.eclipse.swt.widgets.Group;
import org.eclipse.swt.SWT;
import org.eclipse.swt.layout.FormLayout;
import org.eclipse.swt.layout.FormData;
import org.eclipse.swt.layout.FormAttachment;

public class Main extends Window {

	/**
	 * @wbp.parser.entryPoint
	 */
	@Override
	protected void initialize() {
		Display display = new Display();
		Shell shell = new Shell(display);
		shell.setLayout(new FormLayout());
		
		Group group = new Group(shell, SWT.NONE);
		FormData fd_group = new FormData();
		fd_group.left = new FormAttachment(0, 340);
		fd_group.top = new FormAttachment(0, 10);
		fd_group.bottom = new FormAttachment(0, 577);
		fd_group.right = new FormAttachment(0, 756);
		group.setLayoutData(fd_group);
		shell.setSize(782, 625);
		shell.setText("Welcome to Act Editor");
	}

	@Override
	protected void open() {
		shell.open();
	}

	@Override
	protected void dispose() {
		while (!shell.isDisposed()) {
			if (!display.readAndDispatch())
				display.sleep();
		}
		display.dispose();
	}

	public Display getMainDisplay() {
		return display;
	}

}
